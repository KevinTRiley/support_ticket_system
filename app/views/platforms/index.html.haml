%h1 Listing platforms
.table-responsive
  %table{:class => "table table-striped table-bordered table-condensed table-hover"}
    %thead
      %tr
        %th ID
        %th Name
        %th{:colspan => 3}
    %tbody
      - @platforms.each do |platform|
        %tr
          %td= platform.id
          %td= platform.name
          %td= link_to 'Show', platform
          %td= link_to 'Edit', edit_platform_path(platform)
          %td= link_to 'Destroy', platform, method: :delete, data: { confirm: 'Are you sure?' }
%br
= link_to 'New Platform', new_platform_path, :class => "btn btn-primary"