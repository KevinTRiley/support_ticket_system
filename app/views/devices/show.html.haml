#notice
  %p= notice
%p
  %strong.code#message Name:
  = @device.name
= link_to 'Edit', edit_device_path(@device), :class => "btn btn-default"
= link_to 'Back', devices_path, :class => "btn btn-default"
%h1 Listing issues for #{@device.name}
.table-responsive
  %table{:class => "table table-striped table-bordered table-condensed table-hover"}
    %thead
      %tr
        %th ID
        %th Platform
        %th Description
        %th Created At
        %th State
        %th Urgency
        %th Email
        %th Device
        %th
        %th
        %th
    %tbody
      - if @issues
        - @issues.each do |issue|
          %tr
            %td= issue.id
            %td
              - if issue.platform_id
                = link_to Platform.find(issue.platform_id).name, Platform.find(issue.platform_id)
            %td= issue.description
            %td= (issue.created_at ? issue.created_at.to_formatted_s(:long_date_short_time):nil)
            %td= issue.state
            %td= issue.urgency
            %td= issue.email
            %td
              - if issue.device_id
                = link_to Device.find(issue.device_id).name, Device.find(issue.device_id)
            %td= link_to 'Show', issue
            %td= link_to 'Edit', edit_issue_path(issue)
            %td= link_to 'Destroy', issue, method: :delete, data: { confirm: 'Are you sure?' }
%br