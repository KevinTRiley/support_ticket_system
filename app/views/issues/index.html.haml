%h1 Listing issues
%table
  %thead
    %tr
      %th Description
      %th State
      %th Email
      %th
      %th
      %th
  %tbody
    - @issues.each do |issue|
      %tr
        %td= issue.description
        %td= issue.state
        %td= issue.urgency
        %td= issue.email
        %td= link_to 'Show', issue
        %td= link_to 'Edit', edit_issue_path(issue)
        %td= link_to 'Destroy', issue, method: :delete, data: { confirm: 'Are you sure?' }
%br
= link_to 'New Issue', new_issue_path